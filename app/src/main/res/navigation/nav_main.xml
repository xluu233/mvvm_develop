<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.mvvm_develop.MainFragment"
        android:label="MainFragment" >

        <action
            android:id="@+id/action_mainFragment_to_dataBindingFragment"
            app:destination="@id/dataBindingFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/mainFragment"/>
    </fragment>

    <!--            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"-->

    <fragment
        android:id="@+id/dataBindingFragment"
        android:name="com.example.mvvm_develop.test.databinding.DataBindingFragment"
        android:label="DataBindingFragment" />

    <fragment
        android:id="@+id/ARouterFragment"
        android:name="com.example.mvvm_develop.test.arouter.ARouterFragment"
        android:label="fragment_arouter"
        tools:layout="@layout/fragment_arouter" />


</navigation>